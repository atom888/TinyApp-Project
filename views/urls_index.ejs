<% include ./partials/_head %>

<body>

    <% include ./partials/_header %>
<main>

  <h2>URL and its shortened form.</h2>

  <ul>
     <% urls.forEach(function(url) { %>
        <li>tiny.app/<a href="<%=url.longURL%>"><%= url.shortURL %> </a>
          ---
          <a href="<%= url.longURL %>"><%= url.longURL %> </a>
          <form action="/urls/<%= url.shortURL %>/delete" method="POST" style="margin-left:10px;">
              <input id="shortURL" type="submit" value="Delete">
            </form>
            <form action="/urls/<%= url.shortURL %>" method="GET" style="margin-left:10px;">
              <input id="shortURL" type="submit" value="Edit">
            </form>
        </li>
      <% }); %>
  </ul>
  <a href="/urls/new">Click here to shorten new URL</a>

</main>
</body>

</html>


